@{
    Layout = "_Layout";
    ViewData["Title"] = "Courses";
}
<h1>@ViewData["Title"]</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
}

@foreach (var course in Model)
{
  <h3><a href="/courses/@course.GetCourseId()">@course._courseName</a>
  <small>@course._courseNumber</small>
  <small>@course._courseId</small>
  </h3>
}

<p><a href='/'>Back home</a></p>
<p><a href='/courses/new'>Add a new course</a></p>
