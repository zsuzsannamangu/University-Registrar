@{
    Layout = "_Layout";
    ViewData["Title"] = "Add a course";
}
<h1>@ViewData["Title"]</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
}

@foreach (var course in Model)
{
  <h3>@course._name
  <small>@course._number</small>
  <small>@course._id</small>
  </h3>
}

<p><a href='/'>Back home</a></p>
<p><a href='/courses/new'>Add a new course</a></p>
